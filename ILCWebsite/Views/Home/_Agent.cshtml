@model List<ILC.BL.Models.Admin.HomeSection.Agent.AgentHomeVM>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="section-title-2 text-center">
                <h2 data-i18n="OUR_AGENTS"></h2>
                <p data-i18n="OUR_AGENTS_DESC"></p>
            </div>
        </div>
    </div>
    <div class="our-agents">
        <div class="row">
            <div class="agents-carousel">
                <!-- single-agent -->
                @foreach (var item in Model)
                {
                    <div class="col-md-12">
                    <div class="single">
                        <div class="agent-image">
                            <img src="@item.ImagePath" height="250" alt="">
                        </div>
                        <div class="agent-info">
                            <div class="agent-name">
                                <h5 class="en"><a href="agent-details.html">@item.TitleEn</a></h5>
                                <h5 class="ar"><a href="agent-details.html">@item.TitleAr</a></h5>
                                 
                                <p class="en">@Truncate(item.SubTitleEn, 20)</p>
                                <p class="ar">@Truncate(item.SubTitleAr, 20)</p>
                            </div>
                        </div>

                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</div>
@functions {
    public string Truncate(string input, int maxLength)
    {
        if (input.Length > maxLength)
        {
            return input.Substring(0, maxLength) + "...";
        }
        return input;
    }
}
