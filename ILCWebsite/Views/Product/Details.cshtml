@model ILC.BL.Models.Admin.HomeSection.Product.ProductHomeVM
@{
    Layout = "_Layout";
}
<!-- Start page content -->
<section id="page-content" class="page-wrapper">

    <!-- PROPERTIES DETAILS AREA START -->
    <div class="properties-details-area pt-115 pb-60">
        <div class="container">
            <div class="row"> 
                <h3 style="padding-left:18px" class="en">@Model?.TitleEn</h3>
                <h3 style="padding-left:18px" class="ar">@Model?.TitleAr</h3>
                <div class="col-md-4">
                    <!-- pro-details-image -->
                    <div class="pro-details-image mb-60">
                        <div class="pro-details-big-image">
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane fade in active" id="pro-1">
                                    <a href="@Model?.ImagePath" data-lightbox="image-1" data-title="Sheltek Properties - 1">
                                        <img src="@Model?.ImagePath" alt="">
                                    </a>
                                </div>  
                                <div role="tabpanel" class="tab-pane fade" id="pro-2">
                                    <a href="@Model?.Images?.Take(1)?.FirstOrDefault()?.ImagePath" data-lightbox="image-1" data-title="@Model?.TitleEn">
                                        <img src="@Model?.Images?.Take(1)?.FirstOrDefault()?.ImagePath" alt="">
                                    </a>
                                </div>
                                <div role="tabpanel" class="tab-pane fade" id="pro-3">
                                    <a href="@Model?.Images?.Skip(1)?.Take(1)?.FirstOrDefault()?.ImagePath" data-lightbox="image-1" data-title="@Model?.TitleEn">
                                        <img src="@Model?.Images?.Skip(1)?.Take(1)?.FirstOrDefault()?.ImagePath" alt="">
                                    </a>
                                </div>
                                <div role="tabpanel" class="tab-pane fade" id="pro-4">
                                    <a href="@Model?.Images?.Skip(2)?.Take(1)?.FirstOrDefault()?.ImagePath" data-lightbox="image-1" data-title="@Model?.TitleEn">
                                        <img src="@Model?.Images?.Skip(2)?.Take(1)?.FirstOrDefault()?.ImagePath" alt="">
                                    </a>
                                </div> 
                            </div>
                        </div>
                        <div class="pro-details-carousel">
                            <div class="pro-details-item">
                                <a href="#pro-1" data-toggle="tab"><img src="@Model?.ImagePath" alt=""></a>
                            </div>
                            <div class="pro-details-item">
                                <a href="#pro-2" data-toggle="tab">
                                    <img src="@Model?.Images?.Take(1)?.FirstOrDefault()?.ImagePath" alt="">
                                </a>
                            </div>
                            <div class="pro-details-item">
                                <a href="#pro-3" data-toggle="tab">
                                    <img src="@Model?.Images?.Skip(1)?.Take(1)?.FirstOrDefault()?.ImagePath" alt="">
                                </a>
                            </div>
                            <div class="pro-details-item">
                                <a href="#pro-4" data-toggle="tab">
                                    <img src="@Model?.Images?.Skip(2)?.Take(1)?.FirstOrDefault()?.ImagePath" alt="">
                                </a>
                            </div> 
                        </div>
                    </div>



                </div>
                <div class="col-md-8">
                    <!-- pro-details-description -->
                    <h3 data-i18n="AboutProduct"></h3>
                    <div class="pro-details-description mb-50">
                        <p  class="en">@Model?.DescriptionEn</p>
                        <p  class="ar">@Model?.DescriptionAr</p> 
                    </div>
                    <!-- pro-details-short-info -->
                    <div class="pro-details-short-info mb-60">
                        <div class="row">
                            @* <div class="col-sm-12 col-xs-12">
                            <div class="pro-details-condition">
                            <h5>Condition</h5>
                            <div class="pro-details-condition-inner bg-gray">
                            <ul class="condition-list">
                            <li><img src="~/images/icons/5.png" alt="">Area 450 sqft</li>
                            <li><img src="~/images/icons/6.png" alt="">Bedroom 5</li>
                            <li><img src="~/images/icons/7.png" alt="">Bathroom 3</li>
                            <li><img src="~/images/icons/13.png" alt="">Garage 2</li>
                            <li><img src="~/images/icons/14.png" alt="">Kitchen 2</li>
                            <li>$52,350</li>
                            </ul>
                            <p><img src="~/images/icons/location.png" alt="">568 E 1st Ave, Ney Jersey, USA</p>
                            </div>
                            </div>
                            </div> *@
                            <div class="col-sm-12 col-xs-12">
                                <div class="pro-details-amenities">
                                    <h3 data-i18n="Properties"></h3>
                                    <div class="pro-details-amenities-inner bg-gray">
                                        <ul class="amenities-list">
                                            @foreach (var item in Model?.Specifications)
                                            {
                                                <li>
                                                    <span style="font-weight:bold" class="en">@item?.TitleEn : </span>
                                                    <span style="font-weight:bold" class="ar">@item?.TitleAr : </span>
                                                    <p style="display:inline" class="en">
                                                        @item?.DescriptionEn
                                                    </p>
                                                    <p style="display:inline" class="ar">
                                                        @item?.DescriptionAr
                                                    </p>
                                                </li>
                                            } 
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- PROPERTIES DETAILS AREA END -->

</section>
<!-- End page content -->