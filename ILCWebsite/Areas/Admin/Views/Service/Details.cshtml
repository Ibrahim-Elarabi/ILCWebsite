@model ILC.BL.Models.Admin.HomeSection.Services.ServiceVM 
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Details";
}
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Service details</h3> 
    </div>
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <img style="margin-bottom: 2em;width:300px" src="@Model?.ImagePath" alt="">
                    <br>
                    <p><span class="mb-2" style="font-weight:bold">Title Ar : </span>@Model?.TitleAr</p>
                    <p><span class="mb-2" style="font-weight:bold">Title En : </span> @Model?.TitleEn</p>
                    <p><span class="mb-2" style="font-weight:bold">Sub Title Ar : </span>@Model?.SubTitleAr</p>
                    <p><span class="mb-2" style="font-weight:bold">Sub Title En : </span> @Model?.SubTitleEn</p>
                    <p><span class="mb-2" style="font-weight:bold">Description Ar : </span> @Model?.DescriptionAr</p>
                    <p><span class="mb-2" style="font-weight:bold">Description En : </span> @Model?.DescriptionEn</p>
                    <p><span class="mb-2" style="font-weight:bold">AppearInHomePage : </span> @Model?.AppearInHomePage</p>
                    <a href="/Admin/Service/Edit/@Model?.Id" class="btn btn-gradient-primary me-auto"> Edit</a>
                    <a class="btn btn-light me-auto" asp-controller="Service" asp-action="index">Back to list</a>
                </div>
            </div>
        </div>
    </div>
</div>   