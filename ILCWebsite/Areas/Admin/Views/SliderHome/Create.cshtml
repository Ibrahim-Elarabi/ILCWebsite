@model ILC.BL.Models.Admin.HomeSection.Slider.CreateSliderHomeVM
 <form id="form" >
    <div class="row">
        <label asp-for="FirstHeadTextEn">First Head Text En </label>
        <input type="text" asp-for="FirstHeadTextEn" class="form-control" />
        <span asp-validation-for="FirstHeadTextEn" class="text-danger"></span>
    </div>

    <div class="row">
        <label asp-for="FirstHeadTextAr">First Head Text Ar </label>
        <input type="text" asp-for="FirstHeadTextAr" class="form-control" />
        <span asp-validation-for="FirstHeadTextAr" class="text-danger"></span>
    </div>

    <div class="row">
        <label asp-for="SecondtHeadTextEn">Second HeadText En </label>
        <input type="text" asp-for="SecondtHeadTextEn" class="form-control" />
        <span asp-validation-for="SecondtHeadTextEn" class="text-danger"></span>
    </div>
    <div class="row">
        <label asp-for="SecondHeadTextAr">Second HeadText Ar </label>
        <input type="text" asp-for="SecondHeadTextAr" class="form-control" />
        <span asp-validation-for="SecondHeadTextAr" class="text-danger"></span>
    </div>

    <div class="row">
        <label asp-for="ParagraphEn">Paragraph En </label>
        <textarea type="" asp-for="ParagraphEn" class="form-control" rows="4" cols="50"></textarea>
        <span asp-validation-for="ParagraphEn" class="text-danger"></span>
    </div>

    <div class="row">
        <label asp-for="ParagraphAr">Paragraph Ar </label>
        <textarea type="" asp-for="ParagraphAr" class="form-control" rows="4" cols="50"></textarea>
        <span asp-validation-for="ParagraphAr" class="text-danger"></span>
    </div> 
    <div class="row">
        <div class="col-md-6">
            <label asp-for="ImagePath">Upload Image </label>
            <input type="file" asp-for="Image" class="form-control" accept="image/*" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            @await Html.PartialAsync("_PreviewImage",Model?.ImagePath)
        </div>
        <input type="hidden" value="/Admin/SliderHome/Create" id="URL" />
    </div>
    <br />
    <div>
        <button type="submit" class="btn btn-primary"> Save</button>
        <button type="button" class="btn btn-secondary" onclick="clearForm()"> Clear</button>
    </div>
</form>
<div> 
    <a href="/Admin/SliderHome/index"> Back to List</a>
</div>
@section Scripts{
    <script src="~/js/npm_axios_dist_axios.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script src="~/customscript/shared.js"></script>
    <script>
        function clearForm() {
            document.getElementById("form").reset();
            var imagePreview = document.getElementById("imagePreview");
            imagePreview.src = "";
        }
    </script>
}
