@model List<ILC.BL.Models.Admin.HomeSection.Product.ProductHomeVM>
@using Microsoft.Extensions.Localization
@using ILCWebsite.Models.Resources
<a asp-controller="ProductHome" asp-action="Create">Create</a>
<div>
    @foreach (var item in Model)
    {
        <div style="background-color:#ddd"> 
            <img src="@item.ImagePath" height="100"/>
            <p>TitleAr : @item.TitleAr</p>
            <p>TitleAr : @item.TitleAr</p>
            <p>DescriptionAr : @item.DescriptionAr</p>
            <p>DescriptionEn : @item.DescriptionEn</p>
            <a href="/Admin/ProductHome/Edit/@item.Id"> Edit</a>
            <a href="/Admin/ProductHome/Delete/@item.Id"> Delete</a>
            <a href="/Admin/ProductHome/Details/@item.Id"> Details</a>
        </div> 
        <br />
    } 
</div>

