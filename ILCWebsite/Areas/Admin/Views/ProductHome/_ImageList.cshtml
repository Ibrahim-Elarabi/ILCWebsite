@model List<ILC.BL.Models.Admin.HomeSection.Product.ProductImageVM>

@if (Model != null)
{
    @foreach (var item in Model)
    {
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <img class="mb-2" src="@item.ImagePath" style="max-width:100px;max-height:100px" />
                    <br>
                    <p><span class="mb-2" style="font-weight:bold">Display Order : </span> @item?.DisplayOrder</p>
                    <button class="btn btn-light me-auto" onclick="Delete(@item?.Id,'/Admin/ProductHome/DeleteImage')"> Delete</button>
                </div>
            </div>
        </div>
    }
}
