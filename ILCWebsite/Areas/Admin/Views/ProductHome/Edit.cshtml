@model ILC.BL.Models.Admin.HomeSection.Product.EditProductHomeVM
@{  
    ViewData["Title"] = "Edit";
}
<div class="row">  
    <form id="form" enctype="multipart/form-data">
        <div class="row">
            <div class="col-sm-6 form-group">
                <label asp-for="TitleEn" class="control-label"></label>
                <input asp-for="TitleEn" id="TitleEn" class="form-control" />
                <span asp-validation-for="TitleEn" class="text-danger"></span>
            </div>
            <div class="col-sm-6 form-group">
                <label asp-for="DescriptionEn" class="control-label"></label>
                <textarea asp-for="DescriptionEn" id="DescriptionAr" class="form-control" />
                <span asp-validation-for="DescriptionEn" class="text-danger"></span>
            </div>
            <div class="col-sm-6 form-group">
                <label asp-for="TitleAr" class="control-label"></label>
                <input asp-for="TitleAr" id="TitleEn" class="form-control" />
                <span asp-validation-for="TitleAr" class="text-danger"></span>
            </div>
            <div class="col-sm-6 form-group">
                <label asp-for="DescriptionAr" class="control-label"></label>
                <textarea asp-for="DescriptionAr" id="DescriptionAr" class="form-control" />
                <span asp-validation-for="DescriptionAr" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label>Upload Image </label>
                    <input type="file" asp-for="Image" class="form-control" accept="image/*" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="col-md-6"> 
                    @await Html.PartialAsync("_PreviewImage",Model?.ImagePath)
                </div> 
                <input type="hidden" value="@Model?.ImagePath" name="ImagePath" />
                <input type="hidden" value="/Admin/ProductHome/Edit" id="URL" />
                <input type="hidden" value="@Model?.Id" name="Id" />
            </div>
            <br />
            <div>
                <button type="submit" class="btn btn-primary"> Save</button>
                <button type="button" class="btn btn-secondary" onclick="clearForm()"> Reset</button>
            </div> 
        </div>  
    </form> 
</div>
<div>
    <a href="/Admin/ProductHome/index"> Back to List</a>
</div>
@section Scripts{
    <script src="~/js/npm_axios_dist_axios.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script src="~/customscript/shared.js"></script>
    <script>
        function clearForm() {
            document.getElementById("form").reset();
            var imagePreview = document.getElementById("imagePreview");
            imagePreview.src = '@Model?.ImagePath';
        }
    </script>
}