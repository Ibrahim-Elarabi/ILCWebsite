@model List<ILC.BL.Models.Admin.HomeSection.AboutUs.AboutUsHomeVM>
@using Microsoft.Extensions.Localization
@using ILCWebsite.Models.Resources
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "List";
} 

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">List</h3>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <img class="mb-2" src="@item.ImagePath" style="max-width:100px;max-height:100px" />
                        <br>
                        <p><span class="mb-2" style="font-weight:bold">Title Ar : </span> @item?.TextAr</p>
                        <p><span class="mb-2" style="font-weight:bold">Title En : </span> @item?.TextEn</p>
                        <a class="btn btn-gradient-primary me-auto" href="/Admin/AboutUsHome/Edit/@item?.Id"> Edit</a>
                        <button class="btn btn-success" onclick="Delete(@item?.Id,'/Admin/AboutUsHome/Delete')">
                            <span class="mdi mdi-delete"></span>
                            <span>Delete</span>
                        </button>
                        <a class="btn btn-light me-auto"  href="/Admin/AboutUsHome/Details/@item?.Id"> Details</a>
                     </div>
                </div>
            </div> 
        }
    </div>
</div> 
@section Scripts{
    <script src="~/js/npm_axios_dist_axios.min.js"></script>
    <script src="~/customscript/sahreddelete.js"></script>
}