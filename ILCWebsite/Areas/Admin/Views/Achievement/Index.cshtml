@model IEnumerable<ILC.BL.Models.Admin.HomeSection.Achievements.AchievementVM> 
@using Microsoft.Extensions.Localization
@using ILCWebsite.Models.Resources
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "List";
}

<!-- Custom styles for this page -->
<link href="vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
<div class="content-wrapper">
    <div class="container-fluid">
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Achievements Table</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">

                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr> 
                                <th>English title</th>
                                <th>Arabic title</th>
                                <th>Value</th> 
                                <th>Actions</th>
                            </tr>
                        </thead>
                    @*     <tfoot>
                            <tr>
                                <th>Image</th>
                                <th>Arabic title</th>
                                <th>English title</th>
                                <th>Value</th>
                                <th>Actions</th>
                            </tr>
                        </tfoot> *@
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item?.TitleEn</td>
                                    <td>@item?.TitleAr</td>
                                    <td>@item?.Value</td> 
                                    <td style="min-width:220px">
                                        <a class="btn btn-primary me-auto" href="/Admin/Achievement/Edit/@item?.Id"> Edit</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts {
    <script src="~/js/npm_axios_dist_axios.min.js"></script> 
}