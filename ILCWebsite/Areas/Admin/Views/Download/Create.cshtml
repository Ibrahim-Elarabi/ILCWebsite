@using ILC.Domain.Enums;
@model ILC.BL.Models.Admin.HomeSection.Downloads.CreateDownloadVM
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Create";
}
<div class="content-wrapper">
    <div class="page-header text-right mb-2">
        <a class="btn btn-primary" asp-controller="Download" asp-action="index">Back to list</a>
    </div>

    <form id="formAdmin" class="forms-sample">
        <div class="row">
            <div class="col-md-8 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="TitleEn">Title En : </label>
                                    <input type="text" asp-for="TitleEn" class="form-control" placeholder="Title En" />
                                    <span asp-validation-for="TitleEn" style="font-size:.9em; color:red"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="TitleEn">Title Ar : </label>
                                    <input type="text" asp-for="TitleAr" class="form-control" placeholder="Title Ar" />
                                    <span asp-validation-for="TitleAr" style="font-size:.9em; color:red"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="DescriptionEn">Description En</label>
                                    <textarea type="text" asp-for="DescriptionEn" class="form-control" id="DescriptionEn"
                                              placeholder="Description En" rows="6"></textarea>
                                    <span asp-validation-for="DescriptionEn" style="font-size:.9em; color:red"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="DescriptionAr">Description Ar</label>
                                    <textarea type="text" asp-for="DescriptionAr" class="form-control" id="DescriptionAr"
                                              placeholder="Description Ar" rows="6"></textarea>
                                    <span asp-validation-for="DescriptionAr" style="font-size:.9em; color:red"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FileType">File Type:</label>
                                    <select asp-for="FileType" class="form-control">
                                        <option value="">Select Type</option>
                                        @foreach (var item in Enum.GetValues(typeof(PdfTypesEnum)))
                                        {
                                            <option value="@((int)item)">@item</option>
                                        }
                                    </select>
                                    <span asp-validation-for="FileType" style="font-size:.9em; color:red"></span>
                                </div>
                            </div>
                        </div>
                        <div class="text-right">
                            <button type="submit" class="btn btn-primary me-auto">Save</button>
                            <button type="button" class="btn btn-danger me-auto" onclick="clearForm()">Reset</button>
                        </div>
                        <input type="hidden" value="@Model?.PdfPath" name="PdfPath" />
                        <input type="hidden" value="/Admin/Download/Create" id="URL" />
                        <input type="hidden" value="@Model?.Id" name="Id" />
                    </div>
                </div>
            </div>

            <div class="col-md-4 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="PdfPath">Upload PDF </label>
                                    <input type="file" asp-for="Pdf" class="file-upload-default" />
                                    <span asp-validation-for="Pdf" style="font-size:.9em; color:red"></span> 
                                </div> 
                            </div> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <script src="~/js/npm_axios_dist_axios.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script src="~/customscript/shared.js"></script>
    <script>
        function clearForm() {
            document.getElementById("formAdmin").reset();  
        }
    </script>
}
 
 