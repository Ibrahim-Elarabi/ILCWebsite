@model List<ILC.BL.Models.Admin.HomeSection.Downloads.DownloadVM>
@using Microsoft.Extensions.Localization
@using ILCWebsite.Models.Resources
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "List";
}

<!-- Custom styles for this page -->
<link href="vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
<div class="content-wrapper">
    <div class="container-fluid">
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Files Table</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">

                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>English title</th>
                                <th>Arabic title</th>
                                <th>Arabic description</th>
                                <th>English description</th>
                                <th>Appear in Home</th>
                                <th>Type</th>
                                <th>File</th>
                                <th>Actions</th>
                            </tr>
                        </thead> 
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item?.Id</td>
                                    <td>@item?.TitleEn</td>
                                    <td>@item?.TitleAr</td>
                                    <td>@item?.DescriptionAr</td>
                                    <td>@item?.DescriptionEn</td>
                                    <td>
                                        @if (item?.AppearInHome != false)
                                        {
                                            <span>Yes</span>
                                        } 
                                        else{ 
                                            <span>No</span>
                                        } 
                                    </td>  
                                    <td>@item?.FileType</td>
                                    <td>
                                        <a asp-controller="Download" asp-action="ViewFile" asp-route-id="@item?.Id" target="_blank" class="material-tooltip-main btn btn-info btn-floating btn-sm my-0 p-0 m-0 ml-1"
                                           title="View File" data-toggle="tooltip" date-mahmood="yasser">
                                            <i style="width: 40px; padding: 5px;" class="fas fa-file-pdf"></i>
                                        </a>
                                    </td>
                                    <td style="min-width:220px">
                                        <a class="btn btn-primary me-auto" href="/Admin/Download/Edit/@item?.Id"> Edit</a>
                                        <button class="btn btn-danger me-auto" onclick="Delete(@item?.Id,'/Admin/Download/Delete')">Delete</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts {
    <script src="~/js/npm_axios_dist_axios.min.js"></script>
    <script src="~/customscript/sahreddelete.js"></script>
}